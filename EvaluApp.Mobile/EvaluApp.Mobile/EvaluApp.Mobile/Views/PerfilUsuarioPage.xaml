<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EvaluApp.Mobile.Views.PerfilUsuarioPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    Title="Perfil del usuario"
    prism:ViewModelLocator.AutowireViewModel="True">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Margin="20,35,20,20"
                FontSize="Medium"
                HorizontalOptions="CenterAndExpand"
                Text="{Binding NombreCompleto}"
                VerticalOptions="CenterAndExpand"
                VerticalTextAlignment="Center" />

            <Frame
                Grid.Row="1"
                Margin="20,15,20,15"
                Style="{StaticResource ProductoFrame}">

                <StackLayout
                    Padding="16"
                    Orientation="Vertical"
                    Spacing="15">

                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label Text="Identificador:" VerticalOptions="CenterAndExpand" />
                        <Label
                            HorizontalOptions="EndAndExpand"
                            Text="{Binding Usuario.Identificador}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                    <BoxView
                        BackgroundColor="#efefef"
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand" />

                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label Text="Cedula:" VerticalOptions="CenterAndExpand" />
                        <Label
                            HorizontalOptions="EndAndExpand"
                            Text="{Binding Usuario.Cedula}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>


                    <BoxView
                        BackgroundColor="#efefef"
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand" />

                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Label Text="Teléfono:" VerticalOptions="CenterAndExpand" />
                        <Label
                            HorizontalOptions="EndAndExpand"
                            Text="{Binding Usuario.Telefono}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>